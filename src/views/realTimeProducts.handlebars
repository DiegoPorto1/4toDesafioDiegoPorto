<h1>Crear Nuevo Producto</h1>
<form id="idForm">
    <label for="title">Title</label>
    <input type="text" required name="title">
    <label for="description">Description</label>
    <input type="text" required name="description">
    <label for="category">Category</label>
    <input type="text" required name="category">
    <label for="price">Price</label>
    <input type="number" required name="price">
    <label for="stock">Stock</label>
    <input type="number" required name="stock">
    <label for="code">Code</label>
    <input type="text" required name="code">
    <button type="submit">Enviar</button>
</form><br><br>

<button id="botonProductos">Mostrar Productos</button>

<form>
  <label for="id"> Nombre</label>
   <input type="number" required name="id">
   <button id="botonEliminar"> Eliminar</button>
</form>


<div id="prods-container">
  <ul>
    {{#each product}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
  </div>
